      "options": {
        "legend": {
          "calcs": ["mean", "max", "lastNotNull"],
          "displayMode": "table"
        }
      },
      "targets": [
        {
          "expr": "sum(miningcore_pool_connectedminers) by (pool_id)",
          "legendFormat": "{{pool_id}}",
          "refId": "A"
        }
      ],
      "title": "Connected Miners",
      "type": "timeseries"
    },
    {
