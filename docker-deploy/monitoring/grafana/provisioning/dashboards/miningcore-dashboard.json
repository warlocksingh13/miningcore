  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Current hashrate of the pool",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "pointSize": 5
          },
          "unit": "hashes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 2,
      "options": {
        "legend": {
          "calcs": ["mean", "max", "lastNotNull"],
          "displayMode": "table"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(miningcore_pool_validshares[1m])) by (pool_id) * 4294967296 / 1000000000",
          "legendFormat": "{{pool_id}}",
          "refId": "A"
        }
      ],
      "title": "Pool Hashrate (GH/s)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Number of active miners connected to the pool",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineInterpolation": "linear",
